<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary alert alert-success" role="alert">
    <h4 class="alert-heading">Thank you for your order!</h4>
    <p>Your order has been processed successfully!</p>
  </div>

  
  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
      
        <% @line_items.each do |item| %>
          
          <%= render 'line_item', product: item.product, quantity: item[:quantity].to_i %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%= humanized_money_with_symbol @order.total_cents / 100.0 %>
          </th>
        </tr>

        <tr>
          <th colspan="4">
            Ordered by:
          </th>
          <th>
            <%= @order.email%>
          </th>
        </tr>

        <tr>
          <th colspan="4">
            Date:
          </th>
          <th>
            <%= Date.strptime(@order.created_at.to_s)%>
        
          </th>
        </tr>
        
      </tfoot>
    </table>
  </div>


  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
