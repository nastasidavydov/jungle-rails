<section class="admin-products-new">

  <header class="page-header">
    <h1>&raquo; Sign In</h1>
  </header>

  <div class="well">
    <%= link_to '<< Home Page', :root, class: 'btn btn-info' %>
  </div>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
      <%= form_tag '/login' do %>
        Email:
        <div class="form-group">
          
          <%= text_field_tag :email %>
         
        </div>
        Password:
        <div class="form-group">
          <%= password_field_tag :password %>
          
        </div>

        <%= submit_tag 'Sign In', class: 'btn btn-primary' %>
        
        <% end %>

</section>